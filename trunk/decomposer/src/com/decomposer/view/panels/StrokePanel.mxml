<StrokePanelCtrl xmlns="com.DeComposer.controller.panels.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:containers="flexlib.containers.*">

	<containers:FlowBox width="100%" height="100%" backgroundColor="#333333" paddingLeft="5" paddingRight="5"
		paddingTop="5" paddingBottom="5">

		<mx:Button id="btn_solid" click="add('Solid')"
			 skin="assets.skins.strokes.Solid" height="40" width="40"
			 buttonMode="true" useHandCursor="true"/>

		<mx:Button id="btn_radial" click="add('RadialGradient')"
			skin="assets.skins.strokes.RadialGradient" height="40" width="40"
			 buttonMode="true" useHandCursor="true"/>

		<mx:Button id="btn_linear" click="add('LinearGradient')"
			 skin="assets.skins.strokes.LinearGradient" height="40" width="40"
			 buttonMode="true" useHandCursor="true"/>

	</containers:FlowBox>

</StrokePanelCtrl>
